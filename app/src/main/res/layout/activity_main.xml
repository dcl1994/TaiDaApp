<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:background="#eeeeee">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">
            <ImageView
                android:id="@+id/user_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/usertitle_bg"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:textColor="@color/blackmin"/>
            <TextView
                android:id="@+id/city_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天津"
                android:textColor="@color/blackmin"
                android:layout_toLeftOf="@+id/weather_info"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/weather_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toLeftOf="@+id/temperature"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="温度"
                android:textColor="@color/blackmin"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/weather_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天气"
                android:layout_marginRight="5dp"
                android:textSize="12sp"
                android:textColor="@color/blackmin"
                android:layout_toLeftOf="@+id/weather_img"
                android:layout_centerVertical="true"/>
        </RelativeLayout>




        <!--图片轮播框架-->
        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            app:title_textsize="14sp"
            app:title_textcolor="#ffffff"
            app:title_height="20dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
        <!--智能摄像头和电视直播-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/SmartCam"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:background="@drawable/smartcam_bg"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>
            <ImageView
                android:id="@+id/TV"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/tv_bg"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                />
        </LinearLayout>

        <!--下面的内容使用点击事件来切换布局-->
        <include layout="@layout/input_tab"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclermain_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"/>

    </LinearLayout>

    </ScrollView>
    </LinearLayout>

    <!--左侧滑动菜单-->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu"
        app:headerLayout="@layout/nav_header"/>
</android.support.v4.widget.DrawerLayout>
